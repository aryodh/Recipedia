<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/add_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="32dp"
        android:text="@string/add_note"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="48dp"/>

    <EditText
        android:id="@+id/note_title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_note_title_hint"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/add_note_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="48dp"
        android:minLines="1"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:gravity="top|left"
        android:layout_marginHorizontal="48dp"
        />

    <EditText
        android:id="@+id/note_content_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_note_title_hint"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/note_title_input"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:minLines="3"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:gravity="top|left"
        android:layout_marginHorizontal="48dp"
        />

    <TextView
        android:id="@+id/charTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="0 Character"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_content_input" />

    <Button
        android:id="@+id/note_submit_button"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginHorizontal="48dp"
        android:background="@color/buttonSubmitColor"
        android:text="@string/submit"
        android:layout_marginTop="16dp"
        android:textColor="@color/whiteText"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charTotal" />



</androidx.constraintlayout.widget.ConstraintLayout>